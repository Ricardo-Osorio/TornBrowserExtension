{
    "manifest_version": 2,
    "name": "TornMarket+",
    "version": "0.1.1",
    "description": "Provides additional information on the market related pages of the game Torn.",
    "author": "Ricardo Osorio",
    "permissions": [
      "storage",
      "webRequest",
      "https://www.torn.com/*",
      "https://api.torn.com/*"
    ],

    "browser_action": {
      "default_icon": {
        "32": "resources/icons/icon.png"
      },
      "default_title": "Torn Market+",
      "default_popup": "popup/popup.html"
    },    

    "background": {
      "scripts": [
        "scripts/content/common/common.js", 
        "scripts/background/background.js"
      ]
    },

    "content_scripts": [
      {
        "matches": [
          "https://www.torn.com/imarket.php*",
          "https://www.torn.com/shops.php?step=*",
          "https://www.torn.com/bazaar.php?userId=*",
          "https://www.torn.com/bigalgunshop.php"
        ],
        "js": [
          "scripts/content/common/common.js",
          "scripts/content/sidebar/bar.js"
        ],
        "css": ["scripts/content/sidebar/bar.css"]
      },
      {
        "matches": ["https://www.torn.com/imarket.php*"],
        "js": [
          "scripts/content/common/common.js",
          "scripts/content/sidebar/bar.js",
          "scripts/content/market/highlight.js"
        ],
        "css": ["scripts/content/market/highlight.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/bazaar.php?userId=*"],
        "css": ["scripts/content/bazaar/highlight.css"],
        "js": [
          "scripts/content/common/common.js",
          "scripts/content/bazaar/highlight.js"
        ],
        "run_at": "document_end"
      }
    ],

    "web_accessible_resources": [
      "resources/*"
    ]
}
